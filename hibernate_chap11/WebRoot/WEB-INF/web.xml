<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
     <servlet-name>getTypes</servlet-name>
     <servlet-class>servlet.GetTypeServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
       <servlet-name>getTypes</servlet-name>
      <url-pattern>/getTypes</url-pattern>
  </servlet-mapping>
  
  <servlet>
     <servlet-name>addMovie</servlet-name>
     <servlet-class>servlet.SaveMovieServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
       <servlet-name>addMovie</servlet-name>
      <url-pattern>/addMovie</url-pattern>
  </servlet-mapping>
  
  
   <servlet>
     <servlet-name>searchMovie</servlet-name>
     <servlet-class>servlet.SearchMovieServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
       <servlet-name>searchMovie</servlet-name>
      <url-pattern>/searchMovie</url-pattern>
  </servlet-mapping>
</web-app>
